@model DeliveryServices.Models.Driver
@{
    ViewData["Title"] = "Dashboard";
    var pendingDeliveries = Model.Orders.Count(o => o.Status == DeliveryServices.Models.OrderStatus.Pending);
    var inTransitDeliveries = Model.Orders.Count(o => o.Status == DeliveryServices.Models.OrderStatus.PickedUp);
    var deliveredOrders = Model.Orders.Count(o => o.Status == DeliveryServices.Models.OrderStatus.Delivered);
    var recentDeliveries = Model.Orders.OrderByDescending(o => o.CreatedAt).Take(5).ToList();
}

@section PageHeader {
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Driver Dashboard</h2>
            <p class="text-secondary mb-0">Welcome back, @Model.FullName!</p>
        </div>
        <div>
            <span class="text-secondary">
                <i class="bi bi-clock"></i> Last updated: @DateTime.Now.ToString("yyyy/MM/dd HH:mm")
            </span>
        </div>
    </div>
}

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-6 col-xl-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-secondary mb-1 small">Current Balance</p>
                        <h3 class="mb-0 fw-bold text-success">@Model.CurrentBalance.ToString("N2")</h3>
                    </div>
                    <div class="stat-card-icon bg-success bg-opacity-10 text-success">
                        <i class="bi bi-wallet2 fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-secondary mb-1 small">Total Deliveries</p>
                        <h3 class="mb-0 fw-bold">@Model.TotalDeliveries</h3>
                    </div>
                    <div class="stat-card-icon bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-box-seam fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-secondary mb-1 small">This Month</p>
                        <h3 class="mb-0 fw-bold text-primary">@Model.CurrentMonthDeliveries</h3>
                    </div>
                    <div class="stat-card-icon bg-info bg-opacity-10 text-info">
                        <i class="bi bi-calendar-check fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Earnings & Payment Row -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h6 class="mb-2"><i class="bi bi-cash-stack text-primary"></i> Total Earnings</h6>
                <h2 class="mb-0 fw-bold text-success">@Model.TotalEarnings.ToString("N2")</h2>
                <small class="text-secondary">Lifetime payments received</small>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h6 class="mb-2"><i class="bi bi-graph-up text-primary"></i> This Month Earnings</h6>
                <h2 class="mb-0 fw-bold text-info">@Model.CurrentMonthEarnings.ToString("N2")</h2>
                <small class="text-secondary">From @Model.CurrentMonthDeliveries deliveries</small>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h6 class="mb-2"><i class="bi bi-calculator text-primary"></i> Average Per Delivery</h6>
                <h2 class="mb-0 fw-bold text-primary">@Model.AverageEarningsPerDelivery.ToString("N2")</h2>
                <small class="text-secondary">Commission rate: @Model.CommissionPerDelivery.ToString("N2")</small>
            </div>
        </div>
    </div>
</div>

<!-- Recent Deliveries -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-truck text-primary"></i> Recent Deliveries
            </h5>
            <a href="@Url.Action("Deliveries", "Home", new { area = "Driver" })" class="btn btn-sm btn-outline-primary">
                View All
            </a>
        </div>

        @if (recentDeliveries.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Merchant</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in recentDeliveries)
                        {
                            var statusBadge = order.Status switch
                            {
                                DeliveryServices.Models.OrderStatus.Pending => "bg-warning",
                                DeliveryServices.Models.OrderStatus.PickedUp => "bg-info",
                                DeliveryServices.Models.OrderStatus.Delivered => "bg-success",
                                DeliveryServices.Models.OrderStatus.Cancelled => "bg-danger",
                                _ => "bg-secondary"
                            };

                            <tr>
                                <td><strong>#@order.Id</strong></td>
                                <td>@order.CustomerName</td>
                                <td>@order.Merchant?.Name</td>
                                <td><strong>@order.Total.ToString("N2")</strong></td>
                                <td><span class="badge @statusBadge">@order.Status</span></td>
                                <td class="text-secondary small">@order.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                <td>
                                    <a href="@Url.Action("DeliveryDetails", "Home", new { id = order.Id, area = "Driver" })"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 text-secondary">
                <i class="bi bi-inbox display-4"></i>
                <p class="mt-2">No deliveries assigned yet</p>
            </div>
        }
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-3">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm text-center">
            <div class="card-body">
                <i class="bi bi-truck display-4 text-primary"></i>
                <h5 class="mt-3">My Deliveries</h5>
                <p class="text-secondary small">View all assigned deliveries</p>
                <a href="@Url.Action("Deliveries", "Home", new { area = "Driver" })" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Go to Deliveries
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm text-center">
            <div class="card-body">
                <i class="bi bi-wallet2 display-4 text-success"></i>
                <h5 class="mt-3">Payment History</h5>
                <p class="text-secondary small">View your salary payments</p>
                <a href="@Url.Action("Payments", "Home", new { area = "Driver" })" class="btn btn-success">
                    <i class="bi bi-arrow-right"></i> View Payments
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm text-center">
            <div class="card-body">
                <i class="bi bi-person-circle display-4 text-info"></i>
                <h5 class="mt-3">Your Profile</h5>
                <p class="text-secondary small">Update your information</p>
                <a href="@Url.Action("Profile", "Home", new { area = "Driver" })" class="btn btn-info">
                    <i class="bi bi-arrow-right"></i> Edit Profile
                </a>
            </div>
        </div>
    </div>
</div>
