@using Microsoft.AspNetCore.Identity
@using DeliveryServices.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
var title = ViewData["Title"] as string ?? "Dashboard";
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentUser = await UserManager.GetUserAsync(User);
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Driver Portal</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
  :root {
 --sidebar-width: 280px;
        --sidebar-bg: #1a1d29;
      --sidebar-hover: #252936;
            --sidebar-active: #3b82f6;
     --sidebar-active-bg: rgba(59, 130, 246, 0.1);
  --sidebar-text: #cbd5e1;
       --sidebar-text-muted: #94a3b8;
        --sidebar-border: rgba(255, 255, 255, 0.08);
  }
    
    html, body { height: 100%; }
        body { overflow: hidden; }
        
        .app-wrapper { min-height: 100vh; display: flex; }
    
        /* Dark Sidebar Styles */
        .app-sidebar {
            width: var(--sidebar-width);
            min-height: 100vh;
            background: var(--sidebar-bg);
            background: linear-gradient(180deg, #1a1d29 0%, #16191f 100%);
        overflow-y: auto;
            box-shadow: 2px 0 20px rgba(0, 0, 0, 0.1);
        }
        
        .app-sidebar::-webkit-scrollbar { width: 6px; }
        .app-sidebar::-webkit-scrollbar-track { background: transparent; }
        .app-sidebar::-webkit-scrollbar-thumb { background: rgba(255, 255, 255, 0.1); border-radius: 3px; }
        .app-sidebar::-webkit-scrollbar-thumb:hover { background: rgba(255, 255, 255, 0.2); }
   
  .sidebar-brand {
            font-weight: 700;
        font-size: 1.25rem;
            color: #fff;
     padding: 1.5rem 1rem;
            display: flex;
        align-items: center;
        gap: 0.75rem;
            text-decoration: none;
    }
    
        .sidebar-brand-icon {
  width: 40px;
            height: 40px;
  background: var(--sidebar-active);
    border-radius: 10px;
 display: flex;
align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: #fff;
        }
    
        .sidebar-divider {
            height: 1px;
            background: var(--sidebar-border);
        margin: 1rem 0;
            border: none;
  }
   
  .sidebar-nav {
    padding: 0 1rem;
   }
        
        .sidebar-nav .nav-link {
     color: var(--sidebar-text);
  padding: 0.75rem 1rem;
       border-radius: 8px;
     font-weight: 500;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
   gap: 0.75rem;
  margin-bottom: 0.25rem;
        }
  
        .sidebar-nav .nav-link i {
            font-size: 1.1rem;
            width: 20px;
        }
      
      .sidebar-nav .nav-link:hover {
            background: var(--sidebar-hover);
         color: #fff;
   transform: translateX(4px);
        }
        
        .sidebar-nav .nav-link.active {
            background: var(--sidebar-active-bg);
        color: var(--sidebar-active);
            font-weight: 600;
     }
        
        .sidebar-nav .nav-link.active::before {
    content: '';
position: absolute;
      left: 0;
            top: 50%;
            transform: translateY(-50%);
      width: 3px;
        height: 24px;
    background: var(--sidebar-active);
  border-radius: 0 3px 3px 0;
     }

        .sidebar-footer {
   padding: 1.5rem 1rem;
            margin-top: auto;
            border-top: 1px solid var(--sidebar-border);
      color: var(--sidebar-text-muted);
            font-size: 0.75rem;
        }
     
        .sidebar-user {
  display: flex;
    align-items: center;
          gap: 0.75rem;
            padding: 0.75rem;
background: rgba(255, 255, 255, 0.03);
      border-radius: 8px;
            color: var(--sidebar-text);
            margin-bottom: 1rem;
      }
        
        .sidebar-user-avatar {
 width: 36px;
   height: 36px;
    border-radius: 8px;
        }
        
.sidebar-user-name {
            font-weight: 600;
         font-size: 0.875rem;
            margin-bottom: 0;
        }
      
        .sidebar-user-role {
     font-size: 0.75rem;
     color: var(--sidebar-text-muted);
        }
        
    .app-content { flex: 1 1 auto; min-width: 0; }
        .content-scroll { height: calc(100vh - 56px); overflow: auto; }

        @@media (max-width: 991.98px) {
     .app-sidebar { 
         position: fixed; 
   z-index: 1030; 
       left: calc(-1 * var(--sidebar-width)); 
   transition: left .3s ease-in-out; 
  }
      .app-sidebar.show { left: 0; }
        .offcanvas-backdrop-custom { 
      position: fixed; 
 inset: 0; 
     background: rgba(0,0,0,.5); 
        z-index: 1025; 
                display: none; 
            }
            .offcanvas-backdrop-custom.show { display: block; }
    }

        .stat-card-icon { width: 40px; height: 40px; border-radius: 8px; display: grid; place-items: center; }
        .toast-container { position: fixed; top: 1rem; right: 1rem; z-index: 1090; }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body class="bg-body-tertiary">
    <div class="app-wrapper">
  <!-- Dark Sidebar -->
        <aside id="sidebar" class="app-sidebar">
       <a class="sidebar-brand" href="@Url.Action("Index","Home", new { area = "Driver" })">
      <div class="sidebar-brand-icon">
              <i class="bi bi-truck"></i>
         </div>
       <span>Driver Portal</span>
       </a>
  
            <hr class="sidebar-divider" />
            
      <nav class="sidebar-nav">
        <ul class="nav flex-column">
 <li class="nav-item">
              <a class="nav-link @(controller == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
   href="@Url.Action("Index","Home", new { area = "Driver" })">
 <i class="bi bi-speedometer2"></i>
            <span>Dashboard</span>
                 </a>
         </li>
        <li class="nav-item">
      <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Deliveries" || ViewContext.RouteData.Values["action"]?.ToString() == "DeliveryDetails" ? "active" : "")" 
    href="@Url.Action("Deliveries","Home", new { area = "Driver" })">
  <i class="bi bi-truck"></i>
            <span>My Deliveries</span>
            </a>
          </li>
       <li class="nav-item">
        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Payments" ? "active" : "")" 
href="@Url.Action("Payments","Home", new { area = "Driver" })">
         <i class="bi bi-wallet2"></i>
      <span>Payments</span>
         </a>
   </li>
             <li class="nav-item">
        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")" 
         href="@Url.Action("Profile","Home", new { area = "Driver" })">
              <i class="bi bi-person-circle"></i>
          <span>Profile</span>
    </a>
      </li>
          </ul>
  </nav>
   
  <div class="sidebar-footer">
          <div class="sidebar-user">
         <img src="https://ui-avatars.com/api/?name=@(currentUser?.FullName ?? "User")&background=3b82f6&color=fff" 
      alt="User Avatar" 
       class="sidebar-user-avatar" />
         <div class="flex-grow-1">
        <p class="sidebar-user-name">@(currentUser?.FullName ?? "User")</p>
            <p class="sidebar-user-role mb-0">Driver</p>
</div>
 </div>
       <div class="text-center">© @DateTime.UtcNow.Year Delivery Services</div>
            </div>
        </aside>

      <!-- Main content -->
        <div class="app-content d-flex flex-column w-100">
      <!-- Top bar -->
<nav class="navbar navbar-expand-lg bg-body border-bottom">
 <div class="container-fluid">
     <button id="sidebarToggle" class="btn btn-outline-secondary d-lg-none" type="button">
 <i class="bi bi-list"></i>
       </button>

            <div class="ms-auto d-flex align-items-center gap-2">
 <div class="dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center gap-2" data-bs-toggle="dropdown">
            <img src="https://ui-avatars.com/api/?name=@(currentUser?.FullName ?? "User")&background=3b82f6&color=fff" 
           alt="avatar" width="24" height="24" class="rounded-circle" />
      <span class="d-none d-sm-inline">@(currentUser?.FullName ?? "User")</span>
     </button>
         <ul class="dropdown-menu dropdown-menu-end">
           <li><a class="dropdown-item" href="@Url.Action("Profile", "Home")"><i class="bi bi-person me-2"></i>Profile</a></li>
          <li><hr class="dropdown-divider" /></li>
      <li>
          <form method="post" asp-area="Identity" asp-controller="Account" asp-action="Logout">
  <button type="submit" class="dropdown-item text-danger">
         <i class="bi bi-box-arrow-right me-2"></i>Sign out
      </button>
        </form>
 </li>
       </ul>
   </div>
  </div>
       </div>
     </nav>

       <!-- Scrollable page content -->
            <div class="content-scroll">
       <div class="container-fluid py-4">
    @RenderSection("PageHeader", required: false)
            @RenderBody()
            </div>
    </div>
        </div>
    </div>

    <div id="sidebarBackdrop" class="offcanvas-backdrop-custom"></div>

    @if (TempData["success"] != null || TempData["error"] != null)
    {
        <div class="toast-container">
            @if (TempData["success"] != null)
            {
           <div class="toast align-items-center text-bg-success border-0" role="alert" data-bs-delay="3500">
<div class="d-flex">
         <div class="toast-body"><i class="bi bi-check-circle"></i> @TempData["success"]</div>
         <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
                </div>
    }
  @if (TempData["error"] != null)
     {
   <div class="toast align-items-center text-bg-danger border-0" role="alert" data-bs-delay="4500">
       <div class="d-flex">
      <div class="toast-body"><i class="bi bi-exclamation-triangle"></i> @TempData["error"]</div>
                 <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
     </div>
     </div>
          }
      </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            const sidebar = document.getElementById('sidebar');
        const backdrop = document.getElementById('sidebarBackdrop');
   const toggle = document.getElementById('sidebarToggle');

            if (toggle) toggle.addEventListener('click', () => {
      sidebar.classList.add('show');
      backdrop.classList.add('show');
        });
            if (backdrop) backdrop.addEventListener('click', () => {
      sidebar.classList.remove('show');
      backdrop.classList.remove('show');
        });

 const container = document.querySelector('.toast-container');
    if (container) {
                container.querySelectorAll('.toast').forEach(node => new bootstrap.Toast(node).show());
}
   })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
