@model DeliveryServices.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Merchant Registration";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Delivery Services</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <style>
    body {
 background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
      display: flex;
       align-items: center;
            padding: 2rem 0;
     }
 .register-card {
  max-width: 600px;
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }
        .brand-logo {
    width: 60px;
        height: 60px;
     background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
   border-radius: 12px;
 display: flex;
      align-items: center;
    justify-content: center;
 margin: 0 auto 1rem;
        }
        
      /* Remove box-shadow from form controls */
  .form-control,
        .form-select,
      .input-group input,
        .input-group-text {
    box-shadow: none;
        }

  .form-control:focus,
        .form-select:focus,
   .input-group input:focus {
            border-color: #667eea;
            box-shadow: none;
    outline: none;
 }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
            <div class="card register-card mx-auto">
           <div class="card-body p-5">
        <div class="brand-logo">
          <i class="bi bi-shop text-white fs-2"></i>
  </div>
    <h2 class="text-center mb-1">Merchant Registration</h2>
             <p class="text-center text-secondary mb-4">Join our delivery platform as a merchant</p>

    <form method="post" asp-action="Register" id="registerForm">
      <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    
            <!-- Hidden field to indicate this is a merchant registration -->
        <input type="hidden" name="IsMerchant" value="true" />

          <!-- Personal Information -->
             <div class="row g-3">
      <div class="col-md-12">
        <label asp-for="FullName" class="form-label">Full Name</label>
          <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
         <span asp-validation-for="FullName" class="text-danger small"></span>
          </div>

    <div class="col-md-6">
    <label asp-for="Email" class="form-label">Email</label>
      <input asp-for="Email" class="form-control" placeholder="your@email.com" />
<span asp-validation-for="Email" class="text-danger small"></span>
         </div>

          <div class="col-md-6">
          <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
 <input asp-for="PhoneNumber" class="form-control" placeholder="(123) 456-7890" />
             <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
             </div>

    <div class="col-md-6">
    <label asp-for="Password" class="form-label">Password</label>
         <input asp-for="Password" class="form-control" placeholder="Minimum 6 characters" />
   <span asp-validation-for="Password" class="text-danger small"></span>
   </div>

          <div class="col-md-6">
               <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
  <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter password" />
   <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>
  </div>

                <!-- Merchant Business Information -->
       <hr class="my-4" />
             <h5 class="mb-3"><i class="bi bi-building"></i> Business Information</h5>
     <div class="row g-3">
      <div class="col-md-12">
          <label asp-for="BusinessName" class="form-label">Business Name</label>
         <input asp-for="BusinessName" class="form-control" placeholder="Your business name"  />
             <span asp-validation-for="BusinessName" class="text-danger small"></span>
  </div>

     <div class="col-md-6">
          <label asp-for="BusinessPhone" class="form-label">Business Phone</label>
   <input asp-for="BusinessPhone" class="form-control" placeholder="Business contact number" />
   <span asp-validation-for="BusinessPhone" class="text-danger small"></span>
        </div>

          <div class="col-md-6">
          <label asp-for="BusinessAddress" class="form-label">Business Address</label>
 <input asp-for="BusinessAddress" class="form-control" placeholder="Street address" />
        <span asp-validation-for="BusinessAddress" class="text-danger small"></span>
     </div>
   </div>

                      <div class="d-grid mt-4 mb-3">
          <button type="submit" class="btn btn-success btn-lg">
     <i class="bi bi-shop"></i> Register as Merchant
     </button>
       </div>

  <div class="text-center">
   <p class="mb-0">Already have an account? 
     <a href="@Url.Action("Login", "Account")" class="text-decoration-none">Sign in</a>
       </p>
        </div>
         </form>
         </div>
    </div>

      <div class="text-center mt-3">
         <p class="text-white small">© @DateTime.UtcNow.Year Delivery Services. All rights reserved.</p>
    </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
