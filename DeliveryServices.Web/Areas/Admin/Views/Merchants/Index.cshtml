@model IEnumerable<DeliveryServices.Models.Merchants>
@{
    ViewData["Title"] = "Merchants";
}

@section PageHeader {
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Merchants</h2>
            <p class="text-secondary mb-0">Manage all merchants and track balances</p>
        </div>
        <a href="@Url.Action("Create", "Merchants", new { area = "Admin" })" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Merchant
        </a>
    </div>
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
    <h5 class="mb-0">All Merchants</h5>
    </div>
    <div class="card-body p-0">
 @if (Model.Any())
        {
          <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
      <thead class="table-light">
    <tr>
         <th class="px-3">ID</th>
       <th>Name</th>
     <th>Phone</th>
          <th>Address</th>
         <th class="text-end">Current Balance</th>
     <th class="text-center">Actions</th>
          </tr>
         </thead>
    <tbody>
          @foreach (var m in Model)
           {
    <tr>
       <td class="px-3"><strong class="text-primary">#@m.Id</strong></td>
         <td>
      <div class="d-flex align-items-center">
 <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
      <i class="bi bi-shop"></i>
       </div>
      <strong>@m.Name</strong>
         </div>
    </td>
      <td>
     <small class="text-muted">
    <i class="bi bi-telephone"></i> @m.PhoneNumber
      </small>
        </td>
   <td>
         <span class="text-muted">
        <i class="bi bi-geo-alt"></i> @m.Address
      </span>
   </td>
          <td class="text-end">
    @if (m.CurrentBalance > 0)
         {
         <span class="badge bg-warning bg-opacity-10 text-warning border border-warning fs-6 px-3">$@m.CurrentBalance.ToString("N2")</span>
    }
           else
   {
      <span class="text-secondary">$0.00</span>
 }
         </td>
     <td class="text-center">
    <div class="btn-group btn-group-sm">
        <a class="btn btn-outline-primary" href="@Url.Action("Details", "Merchants", new { id = m.Id, area = "Admin" })" title="View Details">
            <i class="bi bi-eye"></i>
     </a>
<a class="btn btn-outline-secondary" href="@Url.Action("Edit", "Merchants", new { id = m.Id, area = "Admin" })" title="Edit">
        <i class="bi bi-pencil"></i>
      </a>
        <form method="post" action="@Url.Action("Delete", "Merchants", new { area = "Admin", id = m.Id })" class="d-inline">
     <button class="btn btn-outline-danger" type="submit" onclick="return confirm('Delete this merchant?')" title="Delete">
          <i class="bi bi-trash"></i>
       </button>
        </form>
         </div>
      </td>
           </tr>
             }
    </tbody>
     </table>
        </div>
    }
        else
        {
            <div class="text-center py-5 text-secondary">
      <i class="bi bi-shop display-4"></i>
     <p class="mt-2">No merchants found</p>
         <a href="@Url.Action("Create", "Merchants", new { area = "Admin" })" class="btn btn-primary mt-2">
            <i class="bi bi-plus-circle"></i> Add First Merchant
          </a>
        </div>
  }
    </div>
</div>
