@model IEnumerable<DeliveryServices.Models.Merchants>
@{
    ViewData["Title"] = "Merchants";
}

@section PageHeader {
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Merchants</h2>
            <p class="text-secondary mb-0">Manage all merchants and track balances</p>
        </div>
        <a href="@Url.Action("Create", "Merchants", new { area = "Admin" })" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Merchant
        </a>
    </div>
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card border-0 shadow-sm">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Current Balance</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model)
                        {
                            <tr>
                                <td><strong>#@m.Id</strong></td>
                                <td><strong>@m.Name</strong></td>
                                <td>@m.PhoneNumber</td>
                                <td>@m.Address</td>
                                <td>
                                    @if (m.CurrentBalance > 0)
                                    {
                                        <span class="badge bg-warning fs-6">@m.CurrentBalance.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-secondary">0.00</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", "Merchants", new { id = m.Id, area = "Admin" })" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit", "Merchants", new { id = m.Id, area = "Admin" })" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="@Url.Action("Delete", "Merchants", new { area = "Admin", id = m.Id })" class="d-inline">
                                            <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Delete this merchant?')" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 text-secondary">
                <i class="bi bi-shop display-4"></i>
                <p class="mt-2">No merchants found</p>
                <a href="@Url.Action("Create", "Merchants", new { area = "Admin" })" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Add First Merchant
                </a>
            </div>
        }
    </div>
</div>
