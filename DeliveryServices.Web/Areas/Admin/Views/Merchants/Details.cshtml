@model DeliveryServices.Models.Merchants
@{
    ViewData["Title"] = "Merchant Details";
}

@section PageHeader {
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">@Model.Name</h2>
            <p class="text-secondary mb-0">Merchant Details & Balance</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Edit", "Merchants", new { id = Model.Id, area = "Admin" })" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="@Url.Action("Index", "Merchants", new { area = "Admin" })" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4">
    <!-- Merchant Info & Balance -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Merchant Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="small text-secondary">Name</label>
                    <p class="mb-0 fw-semibold">@Model.Name</p>
                </div>
                <div class="mb-3">
                    <label class="small text-secondary">Phone</label>
                    <p class="mb-0">@Model.PhoneNumber</p>
                </div>
                <div class="mb-0">
                    <label class="small text-secondary">Address</label>
                    <p class="mb-0">@Model.Address</p>
                </div>
            </div>
        </div>

        <!-- Balance Card -->
        <div class="card border-0 shadow-sm mb-4 @(Model.CurrentBalance > 0 ? "border-warning" : "")">
            <div class="card-header bg-warning bg-opacity-10 border-bottom">
                <h5 class="mb-0 text-warning"><i class="bi bi-wallet2"></i> Current Balance</h5>
            </div>
            <div class="card-body text-center">
                <h2 class="display-4 text-warning mb-0">$@Model.CurrentBalance.ToString("N2")</h2>
                <p class="text-secondary small mb-3">Amount Owed to Merchant</p>
                
                @if (Model.CurrentBalance > 0)
                {
                    <a href="@Url.Action("Create", "MerchantPayouts", new { merchantId = Model.Id, area = "Admin" })" class="btn btn-warning w-100">
                        <i class="bi bi-cash-coin"></i> Pay Merchant
                    </a>
                }
                else
                {
                    <button class="btn btn-secondary w-100" disabled>
                        <i class="bi bi-check-circle"></i> No Balance Due
                    </button>
                }
            </div>
        </div>

        <!-- Statistics -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row g-3 text-center">
                    <div class="col-6">
                        <div class="p-3 bg-light rounded">
                            <h4 class="mb-1 text-primary">@Model.TotalOrders</h4>
                            <small class="text-secondary">Total Orders</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 bg-light rounded">
                            <h4 class="mb-1 text-success">@Model.DeliveredOrders</h4>
                            <small class="text-secondary">Delivered</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 bg-light rounded">
                            <h4 class="mb-1 text-info">$@Model.TotalRevenue.ToString("N2")</h4>
                            <small class="text-secondary">Total Revenue</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 bg-light rounded">
                            <h4 class="mb-1 text-dark">$@Model.TotalPaidOut.ToString("N2")</h4>
                            <small class="text-secondary">Total Paid</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders & Payouts -->
    <div class="col-lg-8">
        <!-- Recent Orders -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-transparent border-bottom d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-box-seam text-primary"></i> Recent Orders</h5>
                <a href="@Url.Action("Create", "Orders", new { area = "Admin" })" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus-circle"></i> New Order
                </a>
            </div>
            <div class="card-body">
                @if (Model.Orders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Order #</th>
                                    <th>Customer</th>
                                    <th>Status</th>
                                    <th>Items</th>
                                    <th>Subtotal</th>
                                    <th>Del. Fee</th>
                                    <th>Total</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders.OrderByDescending(o => o.CreatedAt).Take(10))
                                {
                                    var statusBadge = order.Status switch
                                    {
                                        DeliveryServices.Models.OrderStatus.Pending => "bg-warning",
                                        DeliveryServices.Models.OrderStatus.PickedUp => "bg-info",
                                        DeliveryServices.Models.OrderStatus.InTransit => "bg-primary",
                                        DeliveryServices.Models.OrderStatus.Delivered => "bg-success",
                                        DeliveryServices.Models.OrderStatus.Cancelled => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                    
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Details", "Orders", new { id = order.Id, area = "Admin" })" class="text-decoration-none">
                                                <strong>#@order.Id</strong>
                                            </a>
                                        </td>
                                        <td>@order.CustomerName</td>
                                        <td><span class="badge @statusBadge">@order.Status</span></td>
                                        <td><span class="badge bg-secondary">@order.Items.Count</span></td>
                                        <td><strong>$@order.SubTotal.ToString("N2")</strong></td>
                                        <td><span class="text-info">$@order.DeliveryFee.ToString("N2")</span></td>
                                        <td><strong>$@order.Total.ToString("N2")</strong></td>
                                        <td class="text-secondary small">@order.CreatedAt.ToString("MMM dd")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    @if (Model.Orders.Count > 10)
                    {
                        <div class="text-center mt-3">
                            <p class="text-secondary small">Showing 10 of @Model.Orders.Count orders</p>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4 text-secondary">
                        <i class="bi bi-inbox display-6"></i>
                        <p class="mt-2 mb-0">No orders yet</p>
                    </div>
                }
            </div>
        </div>

        <!-- Payout History -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-cash-stack text-success"></i> Payout History</h5>
            </div>
            <div class="card-body">
                @if (Model.Payouts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Payout #</th>
                                    <th>Amount</th>
                                    <th>Method</th>
                                    <th>Processed By</th>
                                    <th>Date</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payout in Model.Payouts.OrderByDescending(p => p.PaidAt))
                                {
                                    <tr>
                                        <td><strong>#@payout.Id</strong></td>
                                        <td><strong class="text-success">$@payout.Amount.ToString("N2")</strong></td>
                                        <td>@payout.PaymentMethod</td>
                                        <td>@payout.ProcessedBy</td>
                                        <td class="text-secondary small">@payout.PaidAt.ToString("MMM dd, yyyy HH:mm")</td>
                                        <td>@payout.Notes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-secondary">
                        <i class="bi bi-cash-stack display-6"></i>
                        <p class="mt-2 mb-0">No payouts yet</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
