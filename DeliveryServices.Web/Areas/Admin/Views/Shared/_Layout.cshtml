@{
    var title = ViewData["Title"] as string ?? "Dashboard";
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            --sidebar-width: 280px;
            --sidebar-bg: #1a1d29;
            --sidebar-hover: #252936;
            --sidebar-active: #2563eb;
            --sidebar-active-bg: rgba(37, 99, 235, 0.1);
            --sidebar-text: #cbd5e1;
            --sidebar-text-muted: #94a3b8;
            --sidebar-border: rgba(255, 255, 255, 0.08);
        }

        html, body {
            height: 100%;
        }

        body {
            overflow: hidden;
        }

        .app-wrapper {
            min-height: 100vh;
            display: flex;
        }

        /* Dark Sidebar Styles */
        .app-sidebar {
            width: var(--sidebar-width);
            min-height: 100vh;
            height: 100vh;
            background: var(--sidebar-bg);
            background: linear-gradient(180deg, #1a1d29 0%, #16191f 100%);
            overflow-y: auto;
            overflow-x: hidden;
            box-shadow: 2px 0 20px rgba(0, 0, 0, 0.1);
            position: relative;
            display: flex;
            flex-direction: column;
        }

            .app-sidebar::-webkit-scrollbar {
                width: 8px;
            }

            .app-sidebar::-webkit-scrollbar-track {
                background: rgba(255, 255, 255, 0.03);
                border-radius: 10px;
                margin: 8px 0;
            }

            .app-sidebar::-webkit-scrollbar-thumb {
                background: rgba(255, 255, 255, 0.15);
                border-radius: 10px;
                border: 2px solid transparent;
                background-clip: padding-box;
                transition: background 0.3s ease;
            }

                .app-sidebar::-webkit-scrollbar-thumb:hover {
                    background: rgba(255, 255, 255, 0.25);
                    border: 2px solid transparent;
                    background-clip: padding-box;
                }

                .app-sidebar::-webkit-scrollbar-thumb:active {
                    background: rgba(255, 255, 255, 0.35);
                }

        /* Firefox scrollbar */
        .app-sidebar {
            scrollbar-width: thin;
            scrollbar-color: rgba(255, 255, 255, 0.15) rgba(255, 255, 255, 0.03);
        }

        /* Brand / Logo */
        .sidebar-brand {
            font-weight: 700;
            font-size: 1.25rem;
            color: #fff;
            letter-spacing: 0.3px;
            padding: 1.5rem 1rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-decoration: none;
            transition: all 0.2s ease;
        }

            .sidebar-brand:hover {
                color: var(--sidebar-active);
            }

        .sidebar-brand-icon {
            width: 40px;
            height: 40px;
            background: var(--sidebar-active);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: #fff;
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
        }

        /* Sidebar Divider */
        .sidebar-divider {
            height: 1px;
            background: var(--sidebar-border);
            margin: 1rem 0;
            border: none;
        }

        /* Navigation */
        .sidebar-nav {
            padding: 0 1rem 1rem 1rem;
            flex: 1 1 auto;
            overflow-y: auto;
            overflow-x: hidden;
        }

            .sidebar-nav .nav-section-title {
                color: var(--sidebar-text-muted);
                font-size: 0.75rem;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                padding: 1rem 0.75rem 0.5rem;
                margin-top: 1rem;
            }

            .sidebar-nav .nav-link {
                color: var(--sidebar-text);
                padding: 0.75rem 1rem;
                border-radius: 8px;
                font-weight: 500;
                transition: all 0.2s ease;
                display: flex;
                align-items: center;
                gap: 0.75rem;
                margin-bottom: 0.25rem;
                position: relative;
            }

                .sidebar-nav .nav-link i {
                    font-size: 1.1rem;
                    width: 20px;
                    text-align: center;
                }

                .sidebar-nav .nav-link:hover {
                    background: var(--sidebar-hover);
                    color: #fff;
                    transform: translateX(4px);
                }

                .sidebar-nav .nav-link.active {
                    background: var(--sidebar-active-bg);
                    color: var(--sidebar-active);
                    font-weight: 600;
                }

                    .sidebar-nav .nav-link.active::before {
                        content: '';
                        position: absolute;
                        left: 0;
                        top: 50%;
                        transform: translateY(-50%);
                        width: 3px;
                        height: 24px;
                        background: var(--sidebar-active);
                        border-radius: 0 3px 3px 0;
                    }

        /* Badge */
        .nav-badge {
            margin-left: auto;
            font-size: 0.7rem;
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
        }

        /* Sidebar Footer */
        .sidebar-footer {
            padding: 1.5rem 1rem;
            margin-top: auto;
            border-top: 1px solid var(--sidebar-border);
            color: var(--sidebar-text-muted);
            font-size: 0.75rem;
            flex-shrink: 0;
        }

        .sidebar-user {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 8px;
            color: var(--sidebar-text);
            text-decoration: none;
            transition: all 0.2s ease;
            margin-bottom: 1rem;
            cursor: pointer;
        }

            .sidebar-user:hover {
                background: var(--sidebar-hover);
                color: #fff;
            }

        .sidebar-user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            object-fit: cover;
        }

        .sidebar-user-info {
            flex: 1;
            min-width: 0;
        }

        .sidebar-user-name {
            font-weight: 600;
            font-size: 0.875rem;
            margin-bottom: 0;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .sidebar-user-role {
            font-size: 0.75rem;
            color: var(--sidebar-text-muted);
            margin-bottom: 0;
        }

        /* Main Content */
        .app-content {
            flex: 1 1 auto;
            min-width: 0;
        }

        .content-scroll {
            height: calc(100vh - 56px);
            overflow: auto;
            display: flex;
            flex-direction: column;
        }

            .content-scroll > .container-fluid {
                flex: 1 0 auto;
            }

            .content-scroll footer {
                flex-shrink: 0;
            }

        /* Sidebar collapse for mobile */
        @@media (max-width: 991.98px) {
            .app-sidebar {
                position: fixed;
                z-index: 1030;
                left: calc(-1 * var(--sidebar-width));
                top: 0;
                bottom: 0;
                transition: left .3s ease-in-out;
            }

                .app-sidebar.show {
                    left: 0;
                }

            .offcanvas-backdrop-custom {
                position: fixed;
                inset: 0;
                background: rgba(0,0,0,.5);
                z-index: 1025;
                display: none;
                backdrop-filter: blur(4px);
            }

                .offcanvas-backdrop-custom.show {
                    display: block;
                }

            body.sidebar-open {
                overflow: hidden;
            }
        }

        .stat-card-icon {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            display: grid;
            place-items: center;
        }

        /* Form Enhancements */
        .form-control,
        .form-select,
        .input-group input,
        .input-group-text {
            box-shadow: none;
        }

            .form-control:focus,
            .form-select:focus,
            .input-group input:focus {
                border-color: #2563eb;
                box-shadow: none;
                outline: none;
            }

        /* Toast positioning */
        .toast-container {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 1090;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body class="bg-body-tertiary">
    <div class="app-wrapper">
        <!-- Dark Sidebar -->
        <aside id="sidebar" class="app-sidebar">
            <!-- Brand / Logo -->
            <a class="sidebar-brand" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                <div class="sidebar-brand-icon">
                    <i class="bi bi-box-seam-fill"></i>
                </div>
                <span>Delivery Admin</span>
            </a>

            <hr class="sidebar-divider" />

            <!-- Navigation -->
            <nav class="sidebar-nav">
                <div class="nav-section-title">Main Menu</div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Dashboard" ? "active" : "")"
                           href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Orders" ? "active" : "")"
                           href="@Url.Action("Index", "Orders", new { area = "Admin" })">
                            <i class="bi bi-basket"></i>
                            <span>Orders</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Merchants" ? "active" : "")"
                           href="@Url.Action("Index", "Merchants", new { area = "Admin" })">
                            <i class="bi bi-shop"></i>
                            <span>Merchants</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Drivers" ? "active" : "")"
                           href="@Url.Action("Index", "Drivers", new { area = "Admin" })">
                            <i class="bi bi-truck"></i>
                            <span>Drivers</span>
                        </a>
                    </li>
                </ul>

                <div class="nav-section-title">Analytics</div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Reports" ? "active" : "")"
                           href="@Url.Action("Index", "Reports", new { area = "Admin" })">
                            <i class="bi bi-file-earmark-bar-graph"></i>
                            <span>Reports</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Analytics" ? "active" : "")"
                           href="@Url.Action("Index", "Analytics", new { area = "Admin" })">
                            <i class="bi bi-graph-up-arrow"></i>
                            <span>Analytics</span>
                        </a>
                    </li>
                </ul>

                <div class="nav-section-title">System</div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Profile" ? "active" : "")"
                           asp-area="Admin" asp-controller="Profile" asp-action="Index">
                            <i class="bi bi-person-circle"></i>
                            <span>Profile</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Settings" ? "active" : "")"
                           asp-area="Admin" asp-controller="Settings" asp-action="Index">
                            <i class="bi bi-gear"></i>
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Sidebar Footer -->
            <div class="sidebar-footer">
                <div class="dropdown dropup w-100">
                    <a href="#" class="sidebar-user" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://ui-avatars.com/api/?name=@(User.Identity?.Name?.Replace(" ", "+") ?? "User")&background=2563eb&color=fff"
                             alt="User Avatar"
                             class="sidebar-user-avatar" />
                        <div class="sidebar-user-info">
                            <p class="sidebar-user-name">@await Component.InvokeAsync("CurrentUser")</p>
                            <p class="sidebar-user-role">Administrator</p>
                        </div>
                        <i class="bi bi-three-dots-vertical"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark w-100">
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Profile" asp-action="Index">
                                <i class="bi bi-person-circle me-2"></i>My Profile
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Settings" asp-action="Index">
                                <i class="bi bi-gear me-2"></i>Settings
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="Profile" asp-action="ChangePassword">
                                <i class="bi bi-key me-2"></i>Change Password
                            </a>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <form asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
                <div class="text-center mt-2">© @DateTime.UtcNow.Year Delivery Services</div>
            </div>
        </aside>

        <!-- Main content -->
        <div class="app-content d-flex flex-column w-100">
            <!-- Top bar -->
            <nav class="navbar navbar-expand-lg bg-body border-bottom">
                <div class="container-fluid">
                    <button id="sidebarToggle" class="btn btn-outline-secondary d-lg-none" type="button" aria-label="Toggle sidebar">
                        <i class="bi bi-list"></i>
                    </button>

                    <!-- Enhanced Search Form -->
                    <form asp-area="Admin" asp-controller="Search" asp-action="Index" method="get" class="ms-2 flex-grow-1" role="search" style="max-width: 600px;">
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-search"></i>
                            </span>
                            <input class="form-control border-start-0 ps-0"
                                   type="search"
                                   name="q"
                                   placeholder="Search orders, merchants, drivers..."
                                   aria-label="Search"
                                   autocomplete="off" />
                            <button class="btn btn-outline-secondary d-none d-md-inline-flex" type="submit">
                                Search
                            </button>
                        </div>
                    </form>

                    <div class="ms-auto d-flex align-items-center gap-2">
                        <button id="themeToggle" class="btn btn-outline-secondary" type="button" title="Toggle theme">
                            <i class="bi bi-moon-stars"></i>
                        </button>
                        <button class="btn btn-outline-secondary position-relative" type="button" title="Notifications">
                            <i class="bi bi-bell"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
                        </button>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center gap-2" data-bs-toggle="dropdown">
                                <img src="https://ui-avatars.com/api/?name=@(User.Identity?.Name?.Replace(" ", "+") ?? "User")&background=2563eb&color=fff"
                                     alt="avatar" width="24" height="24" class="rounded-circle" />
                                @await Component.InvokeAsync("CurrentUser")
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><h6 class="dropdown-header">@await Component.InvokeAsync("CurrentUser")</h6></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Profile" asp-action="Index"><i class="bi bi-person me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Settings" asp-action="Index"><i class="bi bi-gear me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>Sign out
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Scrollable page content -->
            <div class="content-scroll">
                <div class="container-fluid py-4">
                    @RenderSection("PageHeader", required: false)
                    @RenderBody()
                </div>
                <footer class="mt-auto py-3 border-top bg-body">
                    <div class="container-fluid small text-secondary">
                        Built with <a href="https://getbootstrap.com" class="link-secondary" target="_blank" rel="noopener">Bootstrap 5</a>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    <div id="sidebarBackdrop" class="offcanvas-backdrop-custom"></div>

    <!-- Toasts -->
    @if (TempData["success"] != null || TempData["error"] != null || TempData["info"] != null)
    {
        <div class="toast-container">
            @if (TempData["success"] != null)
            {
                <div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3500">
                    <div class="d-flex">
                        <div class="toast-body"><i class="bi bi-check-circle"></i> @TempData["success"]</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }
            @if (TempData["error"] != null)
            {
                <div class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="4500">
                    <div class="d-flex">
                        <div class="toast-body"><i class="bi bi-exclamation-triangle"></i> @TempData["error"]</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }
            @if (TempData["info"] != null)
            {
                <div class="toast align-items-center text-bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3500">
                    <div class="d-flex">
                        <div class="toast-body"><i class="bi bi-info-circle"></i> @TempData["info"]</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
            (function () {
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
              const toggle = document.getElementById('sidebarToggle');
               const mql = window.matchMedia('(max-width: 991.98px)');

               function closeSidebar() {
             sidebar.classList.remove('show');
          backdrop.classList.remove('show');
                       document.body.classList.remove('sidebar-open');
                    }
             function openSidebar() {
                    sidebar.classList.add('show');
              backdrop.classList.add('show');
          document.body.classList.add('sidebar-open');
                       }
            function resetForDesktop(e) {
                if (!e.matches) { // desktop
              sidebar.classList.remove('show');
             backdrop.classList.remove('show');
          document.body.classList.remove('sidebar-open');
                 }
             }
                  if (toggle) toggle.addEventListener('click', openSidebar);
             if (backdrop) backdrop.addEventListener('click', closeSidebar);
               mql.addEventListener('change', resetForDesktop);
         })();

              // Theme toggle with persistence
                      (function () {
                const key = 'preferred-theme';
                      const root = document.documentElement;
                  const btn = document.getElementById('themeToggle');
          const stored = localStorage.getItem(key);
        if (stored === 'dark' || stored === 'light') {
                      root.setAttribute('data-bs-theme', stored);
              }
                   function toggle() {
                    const current = root.getAttribute('data-bs-theme') || 'light';
                   const next = current === 'dark' ? 'light' : 'dark';
                    root.setAttribute('data-bs-theme', next);
           localStorage.setItem(key, next);
              }
                   if (btn) btn.addEventListener('click', toggle);
           })();


        // Toast notifications
            (function () {
              const container = document.querySelector('.toast-container');
               if (!container) return;
             const nodes = container.querySelectorAll('.toast');
         nodes.forEach(node => new bootstrap.Toast(node).show());
                    })();

                // Search keyboard shortcut (Ctrl+K or Cmd+K)
             (function () {
            const searchInput = document.querySelector('input[name="q"]');
              if (!searchInput) return;

                  document.addEventListener('keydown', function(e) {
            // Check for Ctrl+K or Cmd+K
                if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                  e.preventDefault();
           searchInput.focus();
               searchInput.select();
                  }
                        // ESC to clear search
                 if (e.key === 'Escape' && document.activeElement === searchInput) {
            searchInput.value = '';
                 searchInput.blur();
             }
            });

                    // Add keyboard shortcut hint
               searchInput.setAttribute('placeholder', 'Search... (Ctrl+K)');
           })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>