@{
    var title = ViewData["Title"] as string ?? "Dashboard";
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            --sidebar-width: 260px;
        }
        html, body { height: 100%; }
        body { overflow: hidden; }
        .app-wrapper { min-height: 100vh; display: flex; }
        .app-sidebar {
            width: var(--sidebar-width);
            min-height: 100vh;
            overflow-y: auto;
        }
        .app-content { flex: 1 1 auto; min-width: 0; }
        .content-scroll { height: calc(100vh - 56px); overflow: auto; }

        /* Sidebar collapse for mobile */
        @@media (max-width: 991.98px) {
            .app-sidebar { position: fixed; z-index: 1030; left: -280px; top: 0; bottom: 0; transition: left .2s ease-in-out; }
            .app-sidebar.show { left: 0; }
            .offcanvas-backdrop-custom { position: fixed; inset: 0; background: rgba(0,0,0,.35); z-index: 1025; display: none; }
            .offcanvas-backdrop-custom.show { display: block; }
            body.sidebar-open { overflow: hidden; }
        }

        /* Nice hover states */
        .nav-pills .nav-link { color: var(--bs-body-color); }
        .nav-pills .nav-link:hover { background-color: var(--bs-secondary-bg); }
        .nav-pills .nav-link.active { background-color: var(--bs-primary); color: #fff; }

        .brand { font-weight: 700; letter-spacing: .3px; }
        .stat-card-icon { width: 40px; height: 40px; border-radius: 8px; display: grid; place-items: center; }

        /* Toast positioning */
        .toast-container { position: fixed; top: 1rem; right: 1rem; z-index: 1090; }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body class="bg-body-tertiary">
    <div class="app-wrapper">
        <!-- Sidebar -->
        <aside id="sidebar" class="app-sidebar bg-body border-end p-3">
            <a class="d-flex align-items-center mb-3 text-decoration-none" href="@Url.Action("Index","Dashboard", new { area = "Admin" })">
                <span class="brand fs-5 d-flex align-items-center gap-2">
                    <i class="bi bi-box-seam-fill text-primary"></i>
                    Delivery Admin
                </span>
            </a>
            <hr />
            <ul class="nav nav-pills flex-column gap-1">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2 @(controller == "Dashboard" ? "active" : "")" 
                       href="@Url.Action("Index","Dashboard", new { area = "Admin" })">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2 @(controller == "Orders" ? "active" : "")" 
                       href="@Url.Action("Index","Orders", new { area = "Admin" })">
                        <i class="bi bi-basket"></i>
                        <span>Orders</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2 @(controller == "Merchants" ? "active" : "")" 
                       href="@Url.Action("Index","Merchants", new { area = "Admin" })">
                        <i class="bi bi-shop"></i>
                        <span>Merchants</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2 @(controller == "DeliveryRoutes" ? "active" : "")" 
                       href="@Url.Action("Index","DeliveryRoutes", new { area = "Admin" })">
                        <i class="bi bi-truck"></i>
                        <span>Delivery Routes</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2" href="#">
                        <i class="bi bi-graph-up"></i>
                        <span>Reports</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2" href="#">
                        <i class="bi bi-gear"></i>
                        <span>Settings</span>
                    </a>
                </li>
            </ul>
            <hr />
            <div class="small text-secondary">© @DateTime.UtcNow.Year Delivery Services</div>
        </aside>

        <!-- Main content -->
        <div class="app-content d-flex flex-column w-100">
            <!-- Top bar -->
            <nav class="navbar navbar-expand-lg bg-body border-bottom">
                <div class="container-fluid">
                    <button id="sidebarToggle" class="btn btn-outline-secondary d-lg-none" type="button" aria-label="Toggle sidebar">
                        <i class="bi bi-list"></i>
                    </button>

                    <form class="ms-2 d-none d-md-flex" role="search" onsubmit="return false;">
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0"><i class="bi bi-search"></i></span>
                            <input class="form-control border-start-0" type="search" placeholder="Search..." aria-label="Search" />
                        </div>
                    </form>

                    <div class="ms-auto d-flex align-items-center gap-2">
                        <button id="themeToggle" class="btn btn-outline-secondary" type="button" title="Toggle theme">
                            <i class="bi bi-moon-stars"></i>
                        </button>
                        <button class="btn btn-outline-secondary position-relative" type="button" title="Notifications">
                            <i class="bi bi-bell"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
                        </button>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center gap-2" data-bs-toggle="dropdown">
                                <img src="https://avatars.githubusercontent.com/u/1?v=4" alt="avatar" width="24" height="24" class="rounded-circle" />
                                <span class="d-none d-sm-inline">Admin</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="#">Sign out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Scrollable page content -->
            <div class="content-scroll">
                <div class="container-fluid py-4">
                    @RenderSection("PageHeader", required: false)
                    @RenderBody()
                </div>
                <footer class="mt-auto py-3 border-top bg-body">
                    <div class="container-fluid small text-secondary">
                        Built with <a href="https://getbootstrap.com" class="link-secondary" target="_blank" rel="noopener">Bootstrap 5</a>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    <div id="sidebarBackdrop" class="offcanvas-backdrop-custom"></div>

    <!-- Toasts -->
    @if (TempData["success"] != null || TempData["error"] != null || TempData["info"] != null)
    {
        <div class="toast-container">
            @if (TempData["success"] != null)
            {
                <div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3500">
                    <div class="d-flex">
                        <div class="toast-body"><i class="bi bi-check-circle"></i> @TempData["success"]</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }
            @if (TempData["error"] != null)
            {
                <div class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="4500">
                    <div class="d-flex">
                        <div class="toast-body"><i class="bi bi-exclamation-triangle"></i> @TempData["error"]</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }
            @if (TempData["info"] != null)
            {
                <div class="toast align-items-center text-bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3500">
                    <div class="d-flex">
                        <div class="toast-body"><i class="bi bi-info-circle"></i> @TempData["info"]</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
        // Sidebar show/hide on mobile
        (function () {
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            const toggle = document.getElementById('sidebarToggle');
            const mql = window.matchMedia('(max-width: 991.98px)');

            function closeSidebar() {
                sidebar.classList.remove('show');
                backdrop.classList.remove('show');
                document.body.classList.remove('sidebar-open');
            }
            function openSidebar() {
                sidebar.classList.add('show');
                backdrop.classList.add('show');
                document.body.classList.add('sidebar-open');
            }
            function resetForDesktop(e) {
                if (!e.matches) { // desktop
                    sidebar.classList.remove('show');
                    backdrop.classList.remove('show');
                    document.body.classList.remove('sidebar-open');
                }
            }
            if (toggle) toggle.addEventListener('click', openSidebar);
            if (backdrop) backdrop.addEventListener('click', closeSidebar);
            mql.addEventListener('change', resetForDesktop);
        })();

        // Theme toggle with persistence
        (function () {
            const key = 'preferred-theme';
            const root = document.documentElement;
            const btn = document.getElementById('themeToggle');
            const stored = localStorage.getItem(key);
            if (stored === 'dark' || stored === 'light') {
                root.setAttribute('data-bs-theme', stored);
            }
            function toggle() {
                const current = root.getAttribute('data-bs-theme') || 'light';
                const next = current === 'dark' ? 'light' : 'dark';
                root.setAttribute('data-bs-theme', next);
                localStorage.setItem(key, next);
            }
            if (btn) btn.addEventListener('click', toggle);
        })();

        // Bootstrap toast auto-show
        (function () {
            const container = document.querySelector('.toast-container');
            if (!container) return;
            const nodes = container.querySelectorAll('.toast');
            nodes.forEach(node => new bootstrap.Toast(node).show());
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
