@model DeliveryServices.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@section PageHeader {
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Dashboard</h2>
            <p class="text-secondary mb-0">Welcome back! Here's your delivery service overview.</p>
        </div>
        <div>
            <span class="text-secondary">
                <i class="bi bi-clock"></i>
                Last updated: @DateTime.Now.ToString("yyyy/MM/dd HH:mm")
            </span>
        </div>
    </div>
}

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-secondary mb-1 small">Total Orders</p>
                        <h3 class="mb-0 fw-bold">@Model.TotalOrders</h3>
                    </div>
                    <div class="stat-card-icon bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-basket fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-secondary mb-1 small">Pending Orders</p>
                        <h3 class="mb-0 fw-bold">@Model.PendingOrders</h3>
                    </div>
                    <div class="stat-card-icon bg-warning bg-opacity-10 text-warning">
                        <i class="bi bi-hourglass-split fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-secondary mb-1 small">Delivered</p>
                        <h3 class="mb-0 fw-bold">@Model.DeliveredOrders</h3>
                    </div>
                    <div class="stat-card-icon bg-success bg-opacity-10 text-success">
                        <i class="bi bi-check-circle fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-secondary mb-1 small">Total Merchants</p>
                        <h3 class="mb-0 fw-bold">@Model.TotalMerchants</h3>
                    </div>
                    <div class="stat-card-icon bg-info bg-opacity-10 text-info">
                        <i class="bi bi-shop fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Revenue Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h6 class="mb-0"><i class="bi bi-calendar-day text-primary"></i> Today's Revenue</h6>
                </div>
                <h2 class="mb-0 fw-bold text-success">@Model.TodayRevenue.ToString("N2")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h6 class="mb-0"><i class="bi bi-calendar-month text-primary"></i> This Month's Revenue</h6>
                </div>
                <h2 class="mb-0 fw-bold text-success">@Model.MonthRevenue.ToString("N2")</h2>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row g-3 mb-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="bi bi-bar-chart text-primary"></i> Daily Revenue (Last 7 Days)
                </h5>
                <canvas id="revenueChart" height="80"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="bi bi-pie-chart text-primary"></i> Order Status Distribution
                </h5>
                <canvas id="statusChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders Table -->
<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-clock-history text-primary"></i> Recent Orders
            </h5>
            <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
        </div>

        @if (Model.RecentOrders.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Total</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            var statusBadge = order.Status switch
                            {
                                DeliveryServices.Models.OrderStatus.Pending => "bg-warning",
                                DeliveryServices.Models.OrderStatus.PickedUp => "bg-info",
                                DeliveryServices.Models.OrderStatus.Delivered => "bg-success",
                                DeliveryServices.Models.OrderStatus.Cancelled => "bg-danger",
                                _ => "bg-secondary"
                            };

                            <tr>
                                <td><strong>#@order.Id</strong></td>
                                <td>@order.CustomerName</td>
                                <td>@order.CustomerPhone</td>
                                <td>
                                    <span class="badge @statusBadge">@order.Status</span>
                                </td>
                                <td><strong>@order.Total.ToString("N2")</strong></td>
                                <td class="text-secondary small">@order.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 text-secondary">
                <i class="bi bi-inbox display-4"></i>
                <p class="mt-2">No orders yet</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        // Revenue Chart (Bar)
        const revenueCtx = document.getElementById('revenueChart');
        if (revenueCtx) {
            const revenueData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.DailyRevenue));
            new Chart(revenueCtx, {
                type: 'bar',
                data: {
                    labels: Object.keys(revenueData),
                    datasets: [{
                        label: 'Revenue',
                        data: Object.values(revenueData),
                        backgroundColor: 'rgba(13, 110, 253, 0.8)',
                        borderColor: 'rgba(13, 110, 253, 1)',
                        borderWidth: 1,
                        borderRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toFixed(0);
                                }
                            }
                        }
                    }
                }
            });
        }

        // Status Chart (Doughnut)
        const statusCtx = document.getElementById('statusChart');
        if (statusCtx) {
            const statusData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrderStatusDistribution));
            const colors = {
                'Pending': '#ffc107',
                'PickedUp': '#0dcaf0',
                'InTransit': '#0d6efd',
                'Delivered': '#198754',
                'Cancelled': '#dc3545'
            };
            new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(statusData),
                    datasets: [{
                        data: Object.values(statusData),
                        backgroundColor: Object.keys(statusData).map(k => colors[k] || '#6c757d'),
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: { padding: 15 }
                        }
                    }
                }
            });
        }
    </script>
}
