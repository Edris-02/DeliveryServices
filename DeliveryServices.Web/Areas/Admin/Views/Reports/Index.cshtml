@model DeliveryServices.Models.ViewModels.ReportsViewModel
@{
    ViewData["Title"] = "Reports";
}

@section PageHeader {
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-file-earmark-bar-graph text-primary me-2"></i>Reports
            </h1>
            <p class="text-secondary mb-0">Comprehensive business reports and insights</p>
        </div>
        <div>
            <button class="btn btn-outline-primary" onclick="window.print()">
                <i class="bi bi-printer me-2"></i>Print Report
            </button>
            <a asp-action="ExportRevenue" class="btn btn-primary">
                <i class="bi bi-download me-2"></i>Export to CSV
            </a>
        </div>
    </div>
}

<!-- Revenue Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stat-card-icon bg-primary bg-opacity-10 text-primary me-3">
                        <i class="bi bi-calendar-day"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="text-secondary small mb-1">Today's Revenue</div>
                        <h4 class="mb-0">@Model.TodayRevenue.ToString("C2")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stat-card-icon bg-success bg-opacity-10 text-success me-3">
                        <i class="bi bi-calendar-month"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="text-secondary small mb-1">This Month</div>
                        <h4 class="mb-0">@Model.MonthRevenue.ToString("C2")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stat-card-icon bg-info bg-opacity-10 text-info me-3">
                        <i class="bi bi-calendar-range"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="text-secondary small mb-1">This Year</div>
                        <h4 class="mb-0">@Model.YearRevenue.ToString("C2")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stat-card-icon bg-warning bg-opacity-10 text-warning me-3">
                        <i class="bi bi-cash-stack"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="text-secondary small mb-1">Total Revenue</div>
                        <h4 class="mb-0">@Model.TotalRevenue.ToString("C2")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Order Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3 text-center">
                        <div class="display-6 text-primary">@Model.TotalOrders</div>
                        <div class="text-secondary small">Total Orders</div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="display-6 text-warning">@Model.PendingOrders</div>
                        <div class="text-secondary small">Pending</div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="display-6 text-success">@Model.DeliveredOrders</div>
                        <div class="text-secondary small">Delivered</div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="display-6 text-danger">@Model.CancelledOrders</div>
                        <div class="text-secondary small">Cancelled</div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="display-6 text-primary">@(Model.TotalOrders > 0 ? ((Model.DeliveredOrders * 100) / Model.TotalOrders).ToString("F1") : "0")%</div>
                        <div class="text-secondary small">Success Rate</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Monthly Revenue Trend</h5>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" height="80"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Orders by Status</h5>
            </div>
            <div class="card-body">
                <canvas id="statusChart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-trophy me-2"></i>Top Performing Merchants</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.TopMerchants.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Merchant</th>
                                    <th>Orders</th>
                                    <th>Revenue</th>
                                    <th>Avg Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var merchant in Model.TopMerchants)
                                {
                                    <tr>
                                        <td><strong>@merchant.MerchantName</strong></td>
                                        <td><span class="badge bg-primary">@merchant.TotalOrders</span></td>
                                        <td>@merchant.TotalRevenue.ToString("C2")</td>
                                        <td>@merchant.AverageOrderValue.ToString("C2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-secondary">
                        <i class="bi bi-inbox display-6"></i>
                        <p class="mt-2">No merchant data available</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-star me-2"></i>Top Performing Drivers</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.TopDrivers.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Driver</th>
                                    <th>Deliveries</th>
                                    <th>Earnings</th>
                                    <th>Avg Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var driver in Model.TopDrivers)
                                {
                                    <tr>
                                        <td><strong>@driver.DriverName</strong></td>
                                        <td><span class="badge bg-success">@driver.TotalDeliveries</span></td>
                                        <td>@driver.TotalEarnings.ToString("C2")</td>
                                        <td>@driver.AverageDeliveryTime.ToString("F0") min</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-secondary">
                        <i class="bi bi-inbox display-6"></i>
                        <p class="mt-2">No driver data available</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
                const revenueCtx = document.getElementById('revenueChart');
                if (revenueCtx) {
                    const revenueData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyRevenueTrend));
        new Chart(revenueCtx, {
          type: 'line',
            data: {
           labels: Object.keys(revenueData),
               datasets: [{
             label: 'Revenue',
                    data: Object.values(revenueData),
                   borderColor: 'rgba(13, 110, 253, 1)',
         backgroundColor: 'rgba(13, 110, 253, 0.1)',
                  borderWidth: 3,
                      fill: true,
                tension: 0.4
         }]
                },
            options: {
              responsive: true,
                   maintainAspectRatio: true,
                plugins: {
                     legend: { display: false }
        },
                 scales: {
          y: {
               beginAtZero: true,
                 ticks: {
            callback: function(value) {
             return '$' + value.toFixed(0);
                     }
                }
                      }
              }
               }
         });
             }

                const statusCtx = document.getElementById('statusChart');
           if (statusCtx) {
              const statusData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrdersByStatus));
               new Chart(statusCtx, {
             type: 'doughnut',
                     data: {
                  labels: Object.keys(statusData),
                datasets: [{
              data: Object.values(statusData),
         backgroundColor: [
                     'rgba(255, 193, 7, 0.8)',
            'rgba(13, 202, 240, 0.8)',
              'rgba(25, 135, 84, 0.8)',
          'rgba(220, 53, 69, 0.8)'
                  ],
             borderWidth: 2,
                         borderColor: '#fff'
                }]
                    },
         options: {
                 responsive: true,
             maintainAspectRatio: true,
                 plugins: {
            legend: {
                 position: 'bottom'
               }
           }
            }
          });
           }
    </script>
}
