@model DeliveryServices.Models.Driver
@{
    ViewData["Title"] = $"Edit {Model.FullName}";
}

@section PageHeader {
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-action="Index">Drivers</a></li>
                <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.FullName</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
        <h1 class="h3 mb-0">Edit Driver: @Model.FullName</h1>
        <p class="text-muted mb-0">Update driver information and salary configuration</p>
    </div>
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="TotalDeliveries" />
                    <input type="hidden" asp-for="CurrentMonthDeliveries" />
                    <input type="hidden" asp-for="TotalEarnings" />
                    <input type="hidden" asp-for="CurrentBalance" />
                    <input type="hidden" asp-for="JoinedDate" />
                    <input type="hidden" asp-for="IsActive" />


                    <!-- Personal Information -->
                    <h5 class="mb-3"><i class="bi bi-person-circle"></i> Personal Information</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-md-12">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                            <small class="text-muted">Email cannot be changed (used for login)</small>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr />

                    <!-- Vehicle Information -->
                    <h5 class="mb-3"><i class="bi bi-car-front"></i> Vehicle Information</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="LicenseNumber" class="form-label"></label>
                            <input asp-for="LicenseNumber" class="form-control" />
                            <span asp-validation-for="LicenseNumber" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="VehicleType" class="form-label"></label>
                            <select asp-for="VehicleType" class="form-select">
                                <option value="">Select vehicle type</option>
                                <option value="Motorcycle">Motorcycle</option>
                                <option value="Car">Car</option>
                                <option value="Van">Van</option>
                                <option value="Truck">Truck</option>
                                <option value="Bicycle">Bicycle</option>
                            </select>
                            <span asp-validation-for="VehicleType" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="VehiclePlateNumber" class="form-label"></label>
                            <input asp-for="VehiclePlateNumber" class="form-control" />
                            <span asp-validation-for="VehiclePlateNumber" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr />

                    <!-- Salary Configuration -->
                    <h5 class="mb-3"><i class="bi bi-cash-coin"></i> Salary Configuration</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="BaseSalary" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="BaseSalary" class="form-control" />
                            </div>
                            <span asp-validation-for="BaseSalary" class="text-danger small"></span>
                            <small class="text-muted">Annual base salary (divided by 12 for monthly)</small>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="CommissionPerDelivery" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="CommissionPerDelivery" class="form-control" />
                            </div>
                            <span asp-validation-for="CommissionPerDelivery" class="text-danger small"></span>
                            <small class="text-muted">Extra payment per delivery</small>
                        </div>
                    </div>

                    <!-- Statistics (Read-only) -->
                    <div class="alert alert-light border">
                        <h6><i class="bi bi-info-circle"></i> Current Statistics</h6>
                        <div class="row">
                            <div class="col-md-3">
                                <small class="text-muted">Total Deliveries</small>
                                <div><strong>@Model.TotalDeliveries</strong></div>
                            </div>
                            <div class="col-md-3">
                                <small class="text-muted">This Month</small>
                                <div><strong>@Model.CurrentMonthDeliveries</strong></div>
                            </div>
                            <div class="col-md-3">
                                <small class="text-muted">Current Balance</small>
                                <div><strong class="text-warning">@Model.CurrentBalance.ToString("N2")</strong></div>
                            </div>
                            <div class="col-md-3">
                                <small class="text-muted">Total Earnings</small>
                                <div><strong class="text-success">@Model.TotalEarnings.ToString("N2")</strong></div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
