@model DeliveryServices.Web.Areas.Admin.Controllers.SearchResults
@{
    ViewData["Title"] = $"Search Results for '{Model.Query}'";
}

@section Styles {
    <style>
        .search-header {
background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 2rem 0;
          margin: -1rem -1rem 2rem -1rem;
          border-radius: 0.5rem;
        }

        .search-stat-card {
      transition: transform 0.2s, box-shadow 0.2s;
    }

        .search-stat-card:hover {
          transform: translateY(-2px);
       box-shadow: 0 8px 16px rgba(0,0,0,0.1) !important;
        }

      .category-icon {
            width: 48px;
         height: 48px;
   border-radius: 12px;
            display: flex;
 align-items: center;
            justify-content: center;
   font-size: 24px;
      margin-right: 1rem;
        }

        .empty-state {
         padding: 4rem 2rem;
   text-align: center;
        }

        .empty-state-icon {
      font-size: 80px;
  color: #e0e7ff;
            margin-bottom: 1.5rem;
     }

      .search-again-card {
            background: linear-gradient(135deg, #f6f8fc 0%, #e9ecef 100%);
  }

  .badge-status {
      padding: 0.35rem 0.75rem;
            font-weight: 500;
     font-size: 0.75rem;
        }

        .result-avatar {
        width: 40px;
            height: 40px;
  border-radius: 8px;
      object-fit: cover;
        }

     .table-hover tbody tr {
          transition: all 0.2s ease;
    }

 .table-hover tbody tr:hover {
   background-color: rgba(102, 126, 234, 0.05);
        transform: scale(1.01);
   box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .highlight-query {
            background: linear-gradient(120deg, #fef3c7 0%, #fde68a 100%);
            padding: 2px 6px;
  border-radius: 4px;
            font-weight: 600;
        }
  </style>
}

@section PageHeader {
    <div class="search-header">
        <div class="container-fluid">
 <div class="row align-items-center">
           <div class="col-md-8">
          <h1 class="h2 mb-2 fw-bold">
     <i class="bi bi-search me-2"></i> Search Results
          </h1>
          <p class="mb-0 opacity-90">
   Found <span class="highlight-query">@Model.TotalResults result(s)</span> for 
            <strong>"@Model.Query"</strong>
          </p>
      </div>
    <div class="col-md-4 text-md-end mt-3 mt-md-0">
 <form asp-action="Index" method="get" class="d-inline">
  <div class="input-group">
            <input type="text" 
 name="q" 
    value="@Model.Query" 
      class="form-control bg-white"
       placeholder="Refine search...">
   <button type="submit" class="btn btn-light">
          <i class="bi bi-search"></i>
              </button>
  </div>
                    </form>
             </div>
 </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    @if (Model.TotalResults > 0)
    {
     <div class="row g-3 mb-4">
  <div class="col-md-4">
   <div class="card border-0 shadow-sm search-stat-card h-100">
      <div class="card-body d-flex align-items-center">
     <div class="category-icon bg-primary bg-opacity-10 text-primary">
     <i class="bi bi-basket"></i>
             </div>
  <div>
        <h3 class="mb-0 fw-bold">@Model.Orders.Count</h3>
    <p class="text-muted mb-0 small">Orders Found</p>
          </div>
    </div>
                </div>
        </div>
  <div class="col-md-4">
 <div class="card border-0 shadow-sm search-stat-card h-100">
             <div class="card-body d-flex align-items-center">
     <div class="category-icon bg-success bg-opacity-10 text-success">
             <i class="bi bi-shop"></i>
      </div>
              <div>
  <h3 class="mb-0 fw-bold">@Model.Merchants.Count</h3>
          <p class="text-muted mb-0 small">Merchants Found</p>
    </div>
                </div>
     </div>
            </div>
    <div class="col-md-4">
       <div class="card border-0 shadow-sm search-stat-card h-100">
       <div class="card-body d-flex align-items-center">
   <div class="category-icon bg-info bg-opacity-10 text-info">
            <i class="bi bi-truck"></i>
              </div>
         <div>
        <h3 class="mb-0 fw-bold">@Model.Drivers.Count</h3>
        <p class="text-muted mb-0 small">Drivers Found</p>
  </div>
     </div>
       </div>
            </div>
   </div>
    }
}

@if (Model.TotalResults == 0)
{
    <!-- Empty State -->
    <div class="card border-0 shadow-sm">
        <div class="card-body empty-state">
    <div class="empty-state-icon">
    <i class="bi bi-search"></i>
            </div>
   <h3 class="mb-3">No Results Found</h3>
    <p class="text-muted mb-4 fs-5">
                We couldn't find anything matching "<strong>@Model.Query</strong>"
   </p>
   <div class="d-flex gap-2 justify-content-center">
    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-primary">
<i class="bi bi-house"></i> Back to Dashboard
                </a>
            <button type="button" class="btn btn-primary" onclick="document.querySelector('input[name=q]').focus()">
        <i class="bi bi-search"></i> Try Another Search
         </button>
            </div>
      </div>
    </div>
}
else
{
 <!-- Orders Results -->
    @if (Model.Orders.Any())
    {
  <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-bottom">
  <div class="d-flex align-items-center">
            <div class="category-icon bg-primary bg-opacity-10 text-primary me-3">
            <i class="bi bi-basket"></i>
  </div>
    <div>
                  <h5 class="mb-0 fw-bold">Orders</h5>
      <small class="text-muted">@Model.Orders.Count result(s)</small>
       </div>
                </div>
      </div>
            <div class="card-body p-0">
           <div class="table-responsive">
   <table class="table table-hover align-middle mb-0">
           <thead class="table-light">
        <tr>
        <th class="ps-4">Order ID</th>
     <th>Customer</th>
    <th>Merchant</th>
  <th>Driver</th>
            <th>Status</th>
          <th>Total</th>
      <th>Date</th>
        <th class="text-center">Actions</th>
          </tr>
           </thead>
       <tbody>
           @foreach (var order in Model.Orders)
             {
                 var statusBadge = order.Status switch
         {
      DeliveryServices.Models.OrderStatus.Pending => "bg-warning text-dark",
         DeliveryServices.Models.OrderStatus.PickedUp => "bg-info text-white",
 DeliveryServices.Models.OrderStatus.InTransit => "bg-primary text-white",
                  DeliveryServices.Models.OrderStatus.Delivered => "bg-success text-white",
      DeliveryServices.Models.OrderStatus.Cancelled => "bg-danger text-white",
          _ => "bg-secondary text-white"
     };

          <tr>
      <td class="ps-4">
           <strong class="text-primary">#@order.Id</strong>
     </td>
     <td>
 <div class="fw-semibold">@order.CustomerName</div>
         <small class="text-muted">
            <i class="bi bi-telephone me-1"></i>@order.CustomerPhone
      </small>
     </td>
      <td>@(order.Merchant?.Name ?? "N/A")</td>
        <td>
          @if (order.Driver != null)
                 {
              @order.Driver.FullName
              }
    else
      {
         <span class="badge bg-secondary">Unassigned</span>
              }
  </td>
               <td>
      <span class="badge @statusBadge badge-status">@order.Status</span>
        </td>
        <td>
              <strong class="text-success">@order.Total.ToString("C")</strong>
   </td>
         <td class="text-muted small">
        @order.CreatedAt.ToString("MMM dd, yyyy")
          </td>
            <td class="text-center">
         <a href="@Url.Action("Details", "Orders", new { id = order.Id })" 
           class="btn btn-sm btn-outline-primary">
         <i class="bi bi-eye"></i> View
</a>
        </td>
           </tr>
   }
         </tbody>
  </table>
      </div>
            </div>
        </div>
    }

    <!-- Merchants Results -->
    @if (Model.Merchants.Any())
 {
        <div class="card border-0 shadow-sm mb-4">
  <div class="card-header bg-white border-bottom">
 <div class="d-flex align-items-center">
      <div class="category-icon bg-success bg-opacity-10 text-success me-3">
                 <i class="bi bi-shop"></i>
    </div>
      <div>
  <h5 class="mb-0 fw-bold">Merchants</h5>
       <small class="text-muted">@Model.Merchants.Count result(s)</small>
      </div>
                </div>
   </div>
            <div class="card-body p-0">
          <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
           <tr>
 <th class="ps-4">Merchant</th>
      <th>Email</th>
  <th>Phone</th>
<th>Address</th>
    <th>Balance</th>
  <th>Orders</th>
     <th class="text-center">Actions</th>
           </tr>
                </thead>
    <tbody>
   @foreach (var merchant in Model.Merchants)
        {
             <tr>
        <td class="ps-4">
 <div class="d-flex align-items-center">
 <img src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(merchant.Name)&background=10b981&color=fff&size=80"
       alt="@merchant.Name"
      class="result-avatar me-2" />
                  <strong>@merchant.Name</strong>
       </div>
     </td>
          <td>
        <small class="text-muted">
        <i class="bi bi-envelope me-1"></i>@merchant.Email
 </small>
               </td>
      <td>
        <small class="text-muted">
            <i class="bi bi-telephone me-1"></i>@merchant.PhoneNumber
   </small>
              </td>
            <td class="small text-muted">@merchant.Address</td>
      <td>
          <strong class="text-success">@merchant.CurrentBalance.ToString("C")</strong>
    </td>
   <td>
        <span class="badge bg-primary">@merchant.TotalOrders</span>
       </td>
                  <td class="text-center">
  <a href="@Url.Action("Details", "Merchants", new { id = merchant.Id })" 
    class="btn btn-sm btn-outline-success">
    <i class="bi bi-eye"></i> View
    </a>
           </td>
  </tr>
    }
     </tbody>
      </table>
</div>
            </div>
        </div>
    }

    <!-- Drivers Results -->
    @if (Model.Drivers.Any())
    {
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-bottom">
                <div class="d-flex align-items-center">
  <div class="category-icon bg-info bg-opacity-10 text-info me-3">
       <i class="bi bi-truck"></i>
</div>
          <div>
          <h5 class="mb-0 fw-bold">Drivers</h5>
       <small class="text-muted">@Model.Drivers.Count result(s)</small>
         </div>
      </div>
      </div>
            <div class="card-body p-0">
   <div class="table-responsive">
                 <table class="table table-hover align-middle mb-0">
   <thead class="table-light">
    <tr>
       <th class="ps-4">Driver</th>
    <th>Email</th>
               <th>Phone</th>
   <th>Vehicle</th>
 <th>Status</th>
     <th>Balance</th>
  <th>Deliveries</th>
     <th class="text-center">Actions</th>
       </tr>
</thead>
             <tbody>
      @foreach (var driver in Model.Drivers)
         {
             <tr>
    <td class="ps-4">
   <div class="d-flex align-items-center">
          <img src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(driver.FullName)&background=3b82f6&color=fff&size=80"
   alt="@driver.FullName"
                 class="result-avatar me-2" />
  <strong>@driver.FullName</strong>
    </div>
       </td>
     <td>
        <small class="text-muted">
         <i class="bi bi-envelope me-1"></i>@driver.Email
           </small>
         </td>
   <td>
   <small class="text-muted">
        <i class="bi bi-telephone me-1"></i>@driver.PhoneNumber
      </small>
       </td>
         <td>
         @if (!string.IsNullOrEmpty(driver.VehicleType))
    {
      <div class="small">
<div class="fw-semibold">@driver.VehicleType</div>
  <span class="text-muted">@driver.VehiclePlateNumber</span>
           </div>
   }
   else
   {
       <span class="text-muted small">N/A</span>
               }
  </td>
    <td>
           @if (driver.IsActive)
     {
       <span class="badge bg-success badge-status">
     <i class="bi bi-check-circle me-1"></i>Active
    </span>
    }
 else
   {
   <span class="badge bg-danger badge-status">
               <i class="bi bi-x-circle me-1"></i>Inactive
       </span>
    }
           </td>
    <td>
        <strong class="text-info">@driver.CurrentBalance.ToString("C")</strong>
        </td>
        <td>
           <span class="badge bg-primary">@driver.TotalDeliveries</span>
        </td>
       <td class="text-center">
        <a href="@Url.Action("Details", "Drivers", new { id = driver.Id })" 
 class="btn btn-sm btn-outline-info">
       <i class="bi bi-eye"></i> View
   </a>
      </td>
                   </tr>
      }
        </tbody>
         </table>
                </div>
            </div>
        </div>
    }
}

<!-- Search Again Section -->
<div class="card border-0 shadow-sm search-again-card">
    <div class="card-body p-4">
<div class="text-center mb-4">
         <i class="bi bi-search fs-1 text-primary mb-2 d-block"></i>
            <h5 class="mb-1">Want to search again?</h5>
  <p class="text-muted mb-0">Try different keywords or filters</p>
        </div>
        
  <form asp-action="Index" method="get">
  <div class="row justify-content-center">
<div class="col-md-8">
              <div class="input-group input-group-lg mb-3">
  <span class="input-group-text">
       <i class="bi bi-search"></i>
           </span>
  <input type="text" 
  class="form-control" 
          id="searchInput" 
   name="q" 
     value="@Model.Query" 
     placeholder="Search orders, merchants, drivers..." 
         autofocus />
  <button type="submit" class="btn btn-primary px-4">
     <i class="bi bi-search me-2"></i>Search
       </button>
       </div>
      <div class="text-center">
   <small class="form-text text-muted">
   <i class="bi bi-info-circle me-1"></i>
             Search by order ID, customer name, merchant name, driver name, phone numbers, etc.
      </small>
               </div>
   </div>
 </div>
        </form>

  <div class="mt-4 pt-3 border-top">
       <div class="row g-2 justify-content-center">
      <div class="col-auto">
         <a href="@Url.Action("Index", "Orders")" class="btn btn-outline-primary">
        <i class="bi bi-basket me-1"></i>All Orders
        </a>
    </div>
       <div class="col-auto">
       <a href="@Url.Action("Index", "Merchants")" class="btn btn-outline-success">
           <i class="bi bi-shop me-1"></i>All Merchants
           </a>
  </div>
        <div class="col-auto">
                  <a href="@Url.Action("Index", "Drivers")" class="btn btn-outline-info">
                <i class="bi bi-truck me-1"></i>All Drivers
    </a>
   </div>
       <div class="col-auto">
      <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-secondary">
      <i class="bi bi-house me-1"></i>Dashboard
         </a>
   </div>
 </div>
        </div>
    </div>
</div>
