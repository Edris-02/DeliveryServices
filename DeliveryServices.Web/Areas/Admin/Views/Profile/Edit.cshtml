@model DeliveryServices.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit Profile";
}

@section PageHeader {
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Edit Profile</h1>
            <p class="text-muted mb-0">Update your personal information</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()

                    <div class="text-center mb-4">
                        <img src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(Model.FullName)&background=2563eb&color=fff&size=100"
                             alt="@Model.FullName"
                             class="rounded-circle"
                             width="100"
                             height="100" />
                    </div>

                    <div class="mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text"
                               class="form-control"
                               id="fullName"
                               name="fullName"
                               value="@Model.FullName"
                               required />
                        <small class="text-muted">This name will be displayed throughout the application</small>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email"
                               class="form-control"
                               id="email"
                               value="@Model.Email"
                               readonly
                               disabled />
                        <small class="text-muted">Email cannot be changed as it's used for login</small>
                    </div>

                    <div class="mb-4">
                        <label for="phoneNumber" class="form-label">Phone Number (optional)</label>
                        <input type="tel"
                               class="form-control"
                               id="phoneNumber"
                               name="phoneNumber"
                               value="@Model.PhoneNumber"
                               placeholder="(123) 456-7890" />
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
