@model DeliveryServices.Models.DeliveryRoutes
@{
    ViewData["Title"] = "Route Details";
    var unassignedOrders = ViewBag.UnassignedOrders as List<DeliveryServices.Models.Orders> ?? new List<DeliveryServices.Models.Orders>();
}

@section PageHeader {
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                Route #@Model.Id - @Model.RouteName
                @{
                    var statusBadge = Model.Status switch
                    {
                        DeliveryServices.Models.RouteStatus.Planned => "bg-secondary",
                        DeliveryServices.Models.RouteStatus.InProgress => "bg-primary",
                        DeliveryServices.Models.RouteStatus.Completed => "bg-success",
                        DeliveryServices.Models.RouteStatus.Cancelled => "bg-danger",
                        _ => "bg-secondary"
                    };
                }
                <span class="badge @statusBadge">@Model.Status</span>
            </h2>
            <p class="text-secondary mb-0">Scheduled @Model.ScheduledAt.ToString("MMM dd, yyyy HH:mm")</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Edit", "DeliveryRoutes", new { id = Model.Id, area = "Admin" })" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="@Url.Action("Index", "DeliveryRoutes", new { area = "Admin" })" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4">
    <!-- Route Info & Actions -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Route Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="small text-secondary">Courier</label>
                    <p class="mb-0 fw-semibold">@Model.CourierName</p>
                </div>
                <div class="mb-3">
                    <label class="small text-secondary">Route Name</label>
                    <p class="mb-0 fw-semibold">@Model.RouteName</p>
                </div>
                <div class="mb-3">
                    <label class="small text-secondary">Scheduled</label>
                    <p class="mb-0 fw-semibold">@Model.ScheduledAt.ToString("MMM dd, yyyy HH:mm")</p>
                </div>
                @if (Model.StartedAt.HasValue)
                {
                    <div class="mb-3">
                        <label class="small text-secondary">Started</label>
                        <p class="mb-0 fw-semibold">@Model.StartedAt.Value.ToString("MMM dd, yyyy HH:mm")</p>
                    </div>
                }
                @if (Model.CompletedAt.HasValue)
                {
                    <div class="mb-3">
                        <label class="small text-secondary">Completed</label>
                        <p class="mb-0 fw-semibold">@Model.CompletedAt.Value.ToString("MMM dd, yyyy HH:mm")</p>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Notes))
                {
                    <div class="mb-0">
                        <label class="small text-secondary">Notes</label>
                        <p class="mb-0">@Model.Notes</p>
                    </div>
                }
            </div>
        </div>

        <!-- Route Statistics -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row g-3 text-center">
                    <div class="col-6">
                        <div class="p-3 bg-light rounded">
                            <h4 class="mb-1 text-primary">@Model.TotalOrders</h4>
                            <small class="text-secondary">Total Orders</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 bg-light rounded">
                            <h4 class="mb-1 text-success">$@Model.TotalRevenue.ToString("N2")</h4>
                            <small class="text-secondary">Total Revenue</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 bg-light rounded">
                            <h4 class="mb-1 text-success">@Model.DeliveredOrders</h4>
                            <small class="text-secondary">Delivered</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 bg-light rounded">
                            <h4 class="mb-1 text-warning">@Model.PendingOrders</h4>
                            <small class="text-secondary">Pending</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Route Actions -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0"><i class="bi bi-gear"></i> Actions</h5>
            </div>
            <div class="card-body">
                @if (Model.Status == DeliveryServices.Models.RouteStatus.Planned)
                {
                    <form method="post" asp-action="StartRoute" asp-controller="DeliveryRoutes" class="mb-2">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-success w-100" @(Model.Orders.Any() ? "" : "disabled")>
                            <i class="bi bi-play-circle"></i> Start Route
                        </button>
                    </form>
                    <form method="post" asp-action="CancelRoute" asp-controller="DeliveryRoutes">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-x-circle"></i> Cancel Route
                        </button>
                    </form>
                }
                else if (Model.Status == DeliveryServices.Models.RouteStatus.InProgress)
                {
                    <form method="post" asp-action="CompleteRoute" asp-controller="DeliveryRoutes" class="mb-2">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Complete Route
                        </button>
                    </form>
                    <form method="post" asp-action="CancelRoute" asp-controller="DeliveryRoutes">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-x-circle"></i> Cancel Route
                        </button>
                    </form>
                }
                else if (Model.Status == DeliveryServices.Models.RouteStatus.Completed)
                {
                    <div class="alert alert-success mb-0">
                        <i class="bi bi-check-circle"></i> Route completed
                    </div>
                }
                else if (Model.Status == DeliveryServices.Models.RouteStatus.Cancelled)
                {
                    <div class="alert alert-danger mb-0">
                        <i class="bi bi-x-circle"></i> Route cancelled
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Orders List -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom d-flex align-items-center justify-content-between">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul text-primary"></i> Orders in this Route
                </h5>
                @if (Model.Status == DeliveryServices.Models.RouteStatus.Planned && unassignedOrders.Any())
                {
                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#assignOrderModal">
                        <i class="bi bi-plus-circle"></i> Assign Order
                    </button>
                }
            </div>
            <div class="card-body">
                @if (Model.Orders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Address</th>
                                    <th>Status</th>
                                    <th>Items</th>
                                    <th>Total</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var o in Model.Orders)
                                {
                                    var orderStatusBadge = o.Status switch
                                    {
                                        DeliveryServices.Models.OrderStatus.Pending => "bg-warning",
                                        DeliveryServices.Models.OrderStatus.PickedUp => "bg-info",
                                        DeliveryServices.Models.OrderStatus.InTransit => "bg-primary",
                                        DeliveryServices.Models.OrderStatus.Delivered => "bg-success",
                                        DeliveryServices.Models.OrderStatus.Cancelled => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                    <tr>
                                        <td><strong>#@o.Id</strong></td>
                                        <td>
                                            <strong>@o.CustomerName</strong><br />
                                            <small class="text-secondary">@o.CustomerPhone</small>
                                        </td>
                                        <td>
                                            <span class="d-inline-block text-truncate" style="max-width: 200px;" title="@o.CustomerAddress">
                                                @o.CustomerAddress
                                            </span>
                                        </td>
                                        <td><span class="badge @orderStatusBadge">@o.Status</span></td>
                                        <td><span class="badge bg-secondary">@o.Items.Count items</span></td>
                                        <td><strong>$@o.Total.ToString("N2")</strong></td>
                                        <td>
                                            <a href="@Url.Action("Details", "Orders", new { id = o.Id, area = "Admin" })" class="btn btn-sm btn-outline-primary" title="View Order">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (Model.Status == DeliveryServices.Models.RouteStatus.Planned)
                                            {
                                                <form method="post" asp-action="UnassignOrder" asp-controller="DeliveryRoutes" class="d-inline">
                                                    <input type="hidden" name="routeId" value="@Model.Id" />
                                                    <input type="hidden" name="orderId" value="@o.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Unassign">
                                                        <i class="bi bi-x"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-secondary">
                        <i class="bi bi-inbox display-6"></i>
                        <p class="mt-2 mb-0">No orders assigned to this route yet</p>
                        @if (unassignedOrders.Any() && Model.Status == DeliveryServices.Models.RouteStatus.Planned)
                        {
                            <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#assignOrderModal">
                                <i class="bi bi-plus-circle"></i> Assign First Order
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Assign Order Modal -->
@if (unassignedOrders.Any() && Model.Status == DeliveryServices.Models.RouteStatus.Planned)
{
    <div class="modal fade" id="assignOrderModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Assign Order to Route</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Address</th>
                                    <th>Items</th>
                                    <th>Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in unassignedOrders)
                                {
                                    <tr>
                                        <td><strong>#@order.Id</strong></td>
                                        <td>
                                            <strong>@order.CustomerName</strong><br />
                                            <small class="text-secondary">@order.CustomerPhone</small>
                                        </td>
                                        <td>
                                            <span class="d-inline-block text-truncate" style="max-width: 200px;" title="@order.CustomerAddress">
                                                @order.CustomerAddress
                                            </span>
                                        </td>
                                        <td><span class="badge bg-secondary">@order.Items.Count</span></td>
                                        <td><strong>$@order.Total.ToString("N2")</strong></td>
                                        <td>
                                            <form method="post" asp-action="AssignOrder" asp-controller="DeliveryRoutes" class="d-inline">
                                                <input type="hidden" name="routeId" value="@Model.Id" />
                                                <input type="hidden" name="orderId" value="@order.Id" />
                                                <button type="submit" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-plus"></i> Assign
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
