@model DeliveryServices.Models.Orders
@{
    ViewData["Title"] = "Edit Order";
    var merchants = ViewBag.Merchants as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
}

@section PageHeader {
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Edit Order #@Model.Id</h2>
            <p class="text-secondary mb-0">Update order information</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Details", "Orders", new { id = Model.Id, area = "Admin" })" class="btn btn-outline-primary">
                <i class="bi bi-eye"></i> View Details
            </a>
            <a href="@Url.Action("Index", "Orders", new { area = "Admin" })" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0"><i class="bi bi-pencil"></i> Order Information</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Edit" asp-controller="Orders">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="DeliveredAt" />
                    <input type="hidden" asp-for="Status" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="MerchantId" class="form-label">Merchant <span class="text-danger">*</span></label>
                        <select asp-for="MerchantId" class="form-select" required>
                            <option value="">-- Select Merchant --</option>
                            @if (merchants != null)
                            {
                                @foreach (var merchant in merchants)
                                {
                                    <option value="@merchant.Value" selected="@merchant.Selected">@merchant.Text</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="MerchantId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerName" class="form-label">Customer Name <span class="text-danger">*</span></label>
                        <input asp-for="CustomerName" class="form-control" placeholder="Enter customer name" required />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerPhone" class="form-label">Phone Number</label>
                        <input asp-for="CustomerPhone" class="form-control" placeholder="Enter phone number" type="tel" />
                        <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerAddress" class="form-label">Delivery Address</label>
                        <textarea asp-for="CustomerAddress" class="form-control" rows="3" placeholder="Enter delivery address"></textarea>
                        <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DeliveryFee" class="form-label">Delivery Fee <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="DeliveryFee" class="form-control" type="number" step="0.01" min="0" required />
                        </div>
                        <small class="text-muted">This fee goes to the delivery service, not the merchant</small>
                        <span asp-validation-for="DeliveryFee" class="text-danger d-block"></span>
                    </div>

                    @if (Model.Status == DeliveryServices.Models.OrderStatus.Delivered)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> <strong>Warning:</strong> This order has been delivered. Changing the merchant or amounts may affect merchant balances.
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Details", "Orders", new { id = Model.Id, area = "Admin" })" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Update Order
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
