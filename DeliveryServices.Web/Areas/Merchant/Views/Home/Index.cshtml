@model DeliveryServices.Models.Merchants
@{
    ViewData["Title"] = "Dashboard";
    var pendingOrders = Model.Orders.Count(o => o.Status == DeliveryServices.Models.OrderStatus.Pending);
    var inTransitOrders = Model.Orders.Count(o => o.Status == DeliveryServices.Models.OrderStatus.InTransit || o.Status == DeliveryServices.Models.OrderStatus.PickedUp);
    var deliveredOrders = Model.Orders.Count(o => o.Status == DeliveryServices.Models.OrderStatus.Delivered);
    var recentOrders = Model.Orders.OrderByDescending(o => o.CreatedAt).Take(5).ToList();
}

@section PageHeader {
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
    <h2 class="mb-1">Merchant Dashboard</h2>
     <p class="text-secondary mb-0">Welcome back, @Model.Name!</p>
  </div>
      <div>
  <span class="text-secondary">
      <i class="bi bi-clock"></i> Last updated: @DateTime.Now.ToString("yyyy/MM/dd HH:mm")
   </span>
 </div>
  </div>
}

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-6 col-xl-3">
  <div class="card border-0 shadow-sm h-100">
       <div class="card-body">
           <div class="d-flex align-items-center justify-content-between">
     <div>
   <p class="text-secondary mb-1 small">Current Balance</p>
     <h3 class="mb-0 fw-bold text-success">@Model.CurrentBalance.ToString("C")</h3>
  </div>
        <div class="stat-card-icon bg-success bg-opacity-10 text-success">
     <i class="bi bi-wallet2 fs-4"></i>
   </div>
         </div>
      </div>
 </div>
    </div>

    <div class="col-md-6 col-xl-3">
     <div class="card border-0 shadow-sm h-100">
       <div class="card-body">
       <div class="d-flex align-items-center justify-content-between">
      <div>
       <p class="text-secondary mb-1 small">Total Orders</p>
       <h3 class="mb-0 fw-bold">@Model.TotalOrders</h3>
  </div>
  <div class="stat-card-icon bg-primary bg-opacity-10 text-primary">
<i class="bi bi-basket fs-4"></i>
     </div>
      </div>
     </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
   <div class="card border-0 shadow-sm h-100">
  <div class="card-body">
  <div class="d-flex align-items-center justify-content-between">
     <div>
   <p class="text-secondary mb-1 small">Delivered</p>
  <h3 class="mb-0 fw-bold">@deliveredOrders</h3>
       </div>
       <div class="stat-card-icon bg-success bg-opacity-10 text-success">
        <i class="bi bi-check-circle fs-4"></i>
   </div>
 </div>
 </div>
 </div>
 </div>

    <div class="col-md-6 col-xl-3">
   <div class="card border-0 shadow-sm h-100">
    <div class="card-body">
   <div class="d-flex align-items-center justify-content-between">
        <div>
        <p class="text-secondary mb-1 small">In Transit</p>
               <h3 class="mb-0 fw-bold">@inTransitOrders</h3>
        </div>
 <div class="stat-card-icon bg-info bg-opacity-10 text-info">
  <i class="bi bi-truck fs-4"></i>
</div>
      </div>
    </div>
 </div>
    </div>
</div>

<!-- Revenue & Payouts Row -->
<div class="row g-3 mb-4">
    <div class="col-md-6">
 <div class="card border-0 shadow-sm">
    <div class="card-body">
      <h6 class="mb-2"><i class="bi bi-graph-up text-primary"></i> Total Revenue</h6>
     <h2 class="mb-0 fw-bold text-success">@Model.TotalRevenue.ToString("C")</h2>
      <small class="text-secondary">From @deliveredOrders delivered orders</small>
        </div>
 </div>
    </div>

    <div class="col-md-6">
  <div class="card border-0 shadow-sm">
      <div class="card-body">
 <h6 class="mb-2"><i class="bi bi-cash-stack text-primary"></i> Total Paid Out</h6>
    <h2 class="mb-0 fw-bold text-info">@Model.TotalPaidOut.ToString("C")</h2>
     <small class="text-secondary">@Model.Payouts.Count payout(s) received</small>
      </div>
        </div>
 </div>
</div>

<!-- Recent Orders -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
  <div class="d-flex justify-content-between align-items-center mb-3">
   <h5 class="card-title mb-0">
    <i class="bi bi-clock-history text-primary"></i> Recent Orders
       </h5>
<a href="@Url.Action("Orders", "Home", new { area = "Merchant" })" class="btn btn-sm btn-outline-primary">
         View All
    </a>
   </div>

        @if (recentOrders.Any())
 {
   <div class="table-responsive">
     <table class="table table-hover align-middle">
      <thead class="table-light">
      <tr>
    <th>Order ID</th>
    <th>Customer</th>
          <th>Items</th>
        <th>Total</th>
       <th>Status</th>
 <th>Date</th>
    <th>Actions</th>
      </tr>
    </thead>
      <tbody>
       @foreach (var order in recentOrders)
      {
              var statusBadge = order.Status switch
    {
     DeliveryServices.Models.OrderStatus.Pending => "bg-warning",
      DeliveryServices.Models.OrderStatus.PickedUp => "bg-info",
    DeliveryServices.Models.OrderStatus.InTransit => "bg-primary",
 DeliveryServices.Models.OrderStatus.Delivered => "bg-success",
             DeliveryServices.Models.OrderStatus.Cancelled => "bg-danger",
_ => "bg-secondary"
     };

           <tr>
  <td><strong>#@order.Id</strong></td>
        <td>@order.CustomerName</td>
      <td>
         <span class="badge bg-secondary">@order.Items.Count items</span>
     @if (order.DeliveredItemsCount > 0)
         {
     <span class="badge bg-success">@order.DeliveredItemsCount delivered</span>
  }
       </td>
 <td><strong>@order.Total.ToString("C")</strong></td>
      <td><span class="badge @statusBadge">@order.Status</span></td>
      <td class="text-secondary small">@order.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
            <td>
      <a href="@Url.Action("OrderDetails", "Home", new { id = order.Id, area = "Merchant" })" 
       class="btn btn-sm btn-outline-primary">
 <i class="bi bi-eye"></i> View
     </a>
      </td>
        </tr>
       }
  </tbody>
       </table>
   </div>
        }
else
        {
  <div class="text-center py-5 text-secondary">
 <i class="bi bi-inbox display-4"></i>
         <p class="mt-2">No orders yet</p>
   </div>
  }
 </div>
</div>

<!-- Quick Actions -->
<div class="row g-3">
    <div class="col-md-4">
  <div class="card border-0 shadow-sm text-center">
    <div class="card-body">
      <i class="bi bi-basket display-4 text-primary"></i>
     <h5 class="mt-3">View All Orders</h5>
  <p class="text-secondary small">Manage your delivery orders</p>
<a href="@Url.Action("Orders", "Home", new { area = "Merchant" })" class="btn btn-primary">
       <i class="bi bi-arrow-right"></i> Go to Orders
   </a>
   </div>
  </div>
 </div>

  <div class="col-md-4">
        <div class="card border-0 shadow-sm text-center">
   <div class="card-body">
     <i class="bi bi-cash-stack display-4 text-success"></i>
  <h5 class="mt-3">Payout History</h5>
    <p class="text-secondary small">View your payment history</p>
    <a href="@Url.Action("Payouts", "Home", new { area = "Merchant" })" class="btn btn-success">
       <i class="bi bi-arrow-right"></i> View Payouts
     </a>
   </div>
  </div>
    </div>

    <div class="col-md-4">
  <div class="card border-0 shadow-sm text-center">
   <div class="card-body">
<i class="bi bi-person-circle display-4 text-info"></i>
     <h5 class="mt-3">Your Profile</h5>
       <p class="text-secondary small">Update business information</p>
     <a href="@Url.Action("Profile", "Home", new { area = "Merchant" })" class="btn btn-info">
    <i class="bi bi-arrow-right"></i> Edit Profile
        </a>
       </div>
        </div>
    </div>
</div>
